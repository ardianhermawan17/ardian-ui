{
  "name": "@ardian-ui/primitive-input-text",
  "version": "0.0.1",
  "description": "Primitive input text component",
  "author": "Imanuddin Ardian Hermawan (imanuddin.ardian@gmail.com)",
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      },
      "./*": {
        "import": {
          "types": "./dist/*.d.mts",
          "default": "./dist/*.mjs"
        },
        "require": {
          "types": "./dist/*.d.ts",
          "default": "./dist/*.js"
        }
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint --max-warnings 0 src",
    "clean": "rm -rf dist",
    "reset": "rm -rf dist node_modules",
    "typecheck": "tsc --noEmit",
    "build:js": "rollup -c rollup.config.js",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build": "ardian-build"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@repo/builder": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.39.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "homepage": "indevelopment",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardianhermawan17/ardian-ui.git"
  },
  "bugs":{
    "url": "https://github.com/ardianhermawan17/ardian-ui/issues"
  }
}
